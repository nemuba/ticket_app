<%= turbo_frame_tag "ticket_modal", target: '_top' do %>
  <div class="modal fade" id="shareRecipeModal" tabindex="-1" aria-labelledby="newItemRemoteModalLabel" aria-hidden="true" data-controller="modal">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content" id="modal_content">
        <div class="modal-header bg-dark text-white">
          <h4 class="modal-title" id="newItemRemoteModalLabel"><%= title %></h4>
          <button type="button" class="btn btn-close" data-action="click->modal#close" aria-label="Close"></button>
        </div>

        <div class="modal-body ticket_modal_body" id="ticket_modal_body">
          <%= yield %>
        </div>

        <div class="modal-footer d-flex justify-content-between">
           <%= form_with model: @ticket, method: :delete, data: { turbo_confirm: 'Are you sure?', action: 'turbo:submit-end->modal#clear' } do |f| %>
              <%= f.submit 'Destroy', class: 'btn btn-danger' %>
            <% end %>
           <button class="btn btn-primary" data-action="click->modal#close">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>
