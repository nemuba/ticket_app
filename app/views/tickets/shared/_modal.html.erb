<%= turbo_frame_tag "remote_modal", target: '_top' do %>
  <div class="modal fade" id="shareRecipeModal" tabindex="-1" aria-labelledby="newItemRemoteModalLabel" aria-hidden="true" data-controller="modal" >
      <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content" id="modal_content">
              <div class="modal-header bg-dark text-white">
                  <h4 class="modal-title" id="newItemRemoteModalLabel"><%= title %></h4>
                  <button type="button" class="btn-close" data-action="click->modal#close" aria-label="Close"></button>
              </div>

              <div class="modal-body remote_modal_body" id="remote_modal_body">
                  <%= yield %>
              </div>
          </div>
      </div>
  </div>
<% end %>
