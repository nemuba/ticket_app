<%= turbo_frame_tag :flash_messages do %>
 <div aria-live="polite" aria-atomic="true" class="position-fixed top-5 end-0 p-3" style="z-index: 2000">
    <!-- Then put toasts within -->
    <div data-controller="flash-messages" id="toastMessage" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header bg-primary text-white">
        <strong class="me-auto">Ticket App</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body p-3">
        <%= message %>
      </div>
    </div>
</div>
<% end %>

